    <script>
        // Función para formatear el saldo como moneda con decimales
        function formatCurrency(amount) {
            return new Intl.NumberFormat('es-GT', { style: 'currency', currency: 'GTQ' }).format(amount);
        }

        // Función para formatear la fecha y hora
        function formatDate(dateString) {
            const dateOptions = { year: 'numeric', month: '2-digit', day: '2-digit' };
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };

            const date = new Date(dateString);
            const formattedDate = date.toLocaleDateString('es-GT', dateOptions);
            const formattedTime = date.toLocaleTimeString('es-GT', timeOptions);

            return `${formattedDate} ${formattedTime}`;
        }


        // Obtener todos los elementos con la clase 'saldo' y actualizar su contenido con el saldo formateado
        document.querySelectorAll('.saldo').forEach(function (element) {
            const saldo = parseFloat(element.textContent);
            element.textContent = formatCurrency(saldo);
        });

        // Obtener todos los elementos con la clase 'fecha' y actualizar su contenido con la fecha formateada
        document.querySelectorAll('.fecha').forEach(function (element) {
            const fecha = element.textContent;
            element.textContent = formatDate(fecha);
        });

        // Obtener todos los elementos con la clase 'fila-saldo' y actualizar su contenido con el saldo formateado
        document.querySelectorAll('.fila-saldo').forEach(function (element) {
            const saldo = parseFloat(element.textContent);
            element.textContent = formatCurrency(saldo);
        });

        // Función para manejar la eliminación exitosa
        function handleDeleteSuccess(clientId) {
            // Obtener el modal y ocultarlo
            const modal = document.querySelector(`#exampleModalToggle${clientId}`);
            const modalInstance = bootstrap.Modal.getInstance(modal);
            modalInstance.hide();

            // Recargar la página después de un breve retraso
            setTimeout(() => {
                location.reload();
            }, 1000);
        }

        // Manejar la eliminación de tarjetas usando AJAX
        document.querySelectorAll('.confirm-delete').forEach(function (button) {
            button.addEventListener('click', function () {
                const clientId = this.getAttribute('data-id');
                fetch(`/eliminar/${clientId}`, {
                    method: 'DELETE',
                })
                    .then(response => {
                        if (response.ok) {
                            handleDeleteSuccess(clientId); // Llamar a la función de éxito
                        } else {
                            alert('Error al eliminar la tarjeta');
                        }
                    })
                    .catch(error => {
                        console.error('Error al eliminar la tarjeta:', error);
                    });
            });
        });
    </script>
